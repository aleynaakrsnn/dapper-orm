@model IEnumerable<mutfakdapper.Models.AnaYemekModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Ekle", "EY", null, new { @class = "btn btn-warning" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.YemekAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YemekAdedi)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.CikarilanMalzeme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EkstraMalzeme)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.YemekAdi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.YemekAdedi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CikarilanMalzeme)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EkstraMalzeme)
    </td>
    <td>
        @Html.ActionLink("Edit", "EY", new {  id=item.YemekNo }, new { @class = "btn btn-warning" }) |
        @Html.ActionLink("Delete", "Delete", new {  id=item.YemekNo }, new { @class = "btn btn-warning" })
    </td>
</tr>
}

</table>
